@model Taygeta.UserWebSite.Models.SearchViewModel
@inject Microsoft.AspNet.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["resultString"];
}
@section TopSearchBox{
    <form asp-controller="Search" asp-action="Index" method="get" class="form-inline">
        <ul class="nav navbar-nav top-box">
            <li><input asp-for="Job" placeholder="@Localizer["searchJobPlaceholder"]" class="form-control" />&nbsp;</li>
            <li><input asp-for="Location" placeholder="@Localizer["searchLocationPlaceholder"]" class="form-control" />&nbsp;</li>
            <li>
                <button type="submit" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </button>
            </li>
        </ul>
    </form>
}

<div class="container">
    <h1>@Localizer["resultsHeader", Model.RecordCount.ToString()]</h1>
    <div class="table-responsive" id="vacancyList">
        @await Html.PartialAsync("_SearchPartial")
    </div>
</div>